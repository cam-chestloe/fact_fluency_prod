<h2>Show Test</h2>

<ul>

  <li>
    <strong>Start time:</strong>
    <%= @test.start_time %>
  </li>

  <li>
    <strong>End time:</strong>
    <%= @test.end_time %>
  </li>

  <li>
    <strong>Review start time:</strong>
    <%= @test.review_start_time %>
  </li>

  <li>
    <strong>Timestamps:</strong>
    <%= @test.timestamps %>
  </li>

  <table>
    <thead>
      <tr>
        <th>Question</th>
        <th>Answer</th>
        <th>Correct Answer</th>
      </tr>
    </thead>
    <tbody>
      <%= for question <- @test.questions do %>
        <tr>
          <td><%= question.question %></td>
          <td><%= question.student_answer %></td>
          <td><%= question.correct_answer %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</ul>

<span><%= link "Edit", to: test_path(@conn, :edit, @test) %></span>
<span><%= link "Back", to: test_path(@conn, :index) %></span>

<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :test_type, class: "control-label" %>
    <%= text_input f, :test_type, class: "form-control" %>
    <%= error_tag f, :test_type %>
  </div>

  <div class="form-group">
    <%= label f, :operator, class: "control-label" %>
    <%= text_input f, :operator, class: "form-control" %>
    <%= error_tag f, :operator %>
  </div>
    
  <div class="form-group">
    <%= label f, :number, class: "control-label" %>
    <%= number_input f, :number, class: "form-control" %>
    <%= error_tag f, :number %>
  </div>

  <div class="form-group">
    <%= label f, :student_id, class: "control-label" %>
    <%= number_input f, :student_id, class: "form-control" %>
    <%= error_tag f, :student_id %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
